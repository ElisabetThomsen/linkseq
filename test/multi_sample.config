
base_dir = '/home/olavur/experiments/06-11-2019_exolink'
params {
    gvcf_path = "outs/gvcf"
    mills = "$base_dir/resources/gatk_bundle/Mills_and_1000G_gold_standard.indels.hg38/Mills_and_1000G_gold_standard.indels.hg38.vcf.gz"
    kGphase1 = "$base_dir/resources/gatk_bundle/1000G_phase1.snps.high_confidence.hg38/1000G_phase1.snps.high_confidence.hg38.vcf.gz"
    kGphase3 = "$base_dir/resources/gatk_bundle/1000G.phase3.integrated.sites_only.no_MATCHED_REV.hg38/1000G.phase3.integrated.sites_only.no_MATCHED_REV.hg38.vcf"
    omni = "$base_dir/resources/gatk_bundle/1000G_omni2.5.hg38/1000G_omni2.5.hg38.vcf.gz"
    hapmap = "$base_dir/resources/gatk_bundle/hapmap_3.3.hg38.vcf.gz/hapmap_3.3.hg38.vcf.gz"
    reference = "$base_dir/resources/gatk_bundle/Homo_sapiens_assembly38/Homo_sapiens_assembly38.fasta"
    dbsnp = "$base_dir/resources/gatk_bundle/Homo_sapiens_assembly38.dbsnp138/Homo_sapiens_assembly38.dbsnp138.vcf"
    targets = "$base_dir/resources/sureselect_human_all_exon_v6_utr_grch38/S07604624_Padded.bed"
    outdir = "outs"
}

process {
    executor = 'local'
    memory = '200GB'
    cpus = 40
}

executor {
    name = 'local'
    cpus = 40
    memory = '200GB'
    queueSize = 100
}

// Capture exit codes from upstream processes when piping.
process.shell = ['/bin/bash', '-euo', 'pipefail']
